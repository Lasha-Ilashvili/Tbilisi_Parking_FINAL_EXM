<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="customLayoutPadding">
        <item name="android:paddingTop">@dimen/padding_extra_large</item>
        <item name="android:paddingBottom">@dimen/padding_extra_large</item>
        <item name="android:paddingStart">@dimen/padding_large</item>
        <item name="android:paddingEnd">@dimen/padding_large</item>
    </style>

    <style name="customButton">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_marginStart">@dimen/margin_negative_standard</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="customButtonArrow" parent="customButton">
        <item name="tint">?android:attr/textColorPrimary</item>
    </style>

    <style name="customPageTitle">
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="customBottomNavPageTitle" parent="customPageTitle">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
    </style>

    <style name="customFieldsTitle">
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="checkBoxStyle">
        <item name="android:layout_marginStart">@dimen/margin_negative_small</item>
        <item name="buttonTint">@color/blue</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="customButtonMaterial">
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/padding_small</item>
        <item name="android:padding">@dimen/padding_standard</item>
    </style>

    <style name="customOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="cornerRadius">@dimen/padding_small</item>
        <item name="strokeWidth">1.5dp</item>
    </style>

</resources>

